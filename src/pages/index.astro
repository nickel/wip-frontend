---
import Layout from "../layouts/Layout.astro"

import PresentationCard from "../sections/homepage/PresentationCard.astro"
import Projects from "../sections/homepage/Projects.astro"
import Links from "../sections/homepage/Links.astro"
---
<Layout>
  <style>
    body {
      align-content: center;
      min-height: 80vh;
      padding: 60px 0px;
    }
  </style>

  <div class="flex flex-col lg:flex-row">
    <div class="flex-1 border-b lg:border-b-0 lg:border-r pt-4 pb-4">
      <PresentationCard />
    </div>
    <div class="flex-1 border-b lg:border-b-0 lg:border-r pt-4 pb-4 pl-4">
      <Projects />
    </div>
    <div class="flex-1 pl-4">
      <Links />
    </div>
  </div>
</Layout>
