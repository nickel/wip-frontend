---
import Layout from "../layouts/Layout.astro"
import Logo from "../sections/Logo.astro"

const response = await fetch(`${import.meta.env.BACKEND_API_URL}/api/v1/logs`);
const data = await response.json();
const logs = data.logs;
---

<Layout>
  <header class="mt-4">
    <Logo title="Juan Gallego IV's bitacora" />
    <p>
      Avoiding getting lost.
    </p>
  </header>

  <main class="mt-4 pt-4 border-t">
    <ul>
      {logs.map((log) => (
        <li>
          {log.content}
        </li>
      ))}
    </ul>
  </main>
</Layout>
