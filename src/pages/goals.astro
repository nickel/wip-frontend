---
import Layout from "../layouts/Layout.astro"
import Logo from "../sections/Logo.astro"

const response = await fetch(`${import.meta.env.BACKEND_API_URL}/api/v1/goals`);
const data = await response.json();
const goals = data.goals;
---

<Layout>
  <div class="p-4">
    <header class="mt-4">
      <Logo title="Juan Gallego IV's goals" />
      <p>
        Future achievements tracker.
      </p>
    </header>

    <main class="mt-4 pt-4 border-t">
      <ul>
        {goals.map((goal) => (
          <li>
            <div class="text-2xl">
              {goal.title}
            </div>
            <div class="p-2">{goal.description}</div>
          </li>
        ))}
      </ul>
    </main>
  </div>
</Layout>
